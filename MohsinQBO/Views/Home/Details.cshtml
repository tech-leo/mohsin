

@{
    Layout = null;

    ViewData["Title"] = "Home";
    var generalLedger = ViewBag.GeneralLedger as List<GeneralLedgerDetail>;
    var Customers = ViewBag.Customers as List<Customer>;
    var Vendors = ViewBag.Vendors as List<Vendor>;
    var Classes = ViewBag.Classes as List<Class>;
    var Accounts = ViewBag.Accounts as List<AccountEntity>;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @* <title>Modernize Free Bootstrap Admin Template by Adminmart</title> *@
    @* <link rel="shortcut icon" type="image/png" href="../assets/images/logos/favicon.png" /> *@
    <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>

<body>
    <style>
                .table-container {
                    font-size:8px;
            max-height: 500px; /* Adjust height as needed */
            overflow-y: auto;
        }
        .table thead, .table tbody {
            display: block;
        }
        .table tbody {
            max-height: 400px; /* Adjust based on row height */
            overflow-y: auto;
            display: block;
        }
        .table tbody tr {
            display: table;
            width: 100%;
            table-layout: fixed;
        }
        .table thead tr {
            display: table;
            width: 100%;
            table-layout: fixed;
        }
                </style>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!--  App Topstrip -->
        <div class="app-topstrip  py-6 px-3 w-100 d-lg-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center justify-content-center gap-5 mb-2 mb-lg-0">
                <h6 class="alert alert-success">Mohsin QuickBooks Application</h6>
            </div>
            <div class="d-none d-xl-flex align-items-center gap-3">
            </div>
        </div>

        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Home</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("Index","Home")" aria-expanded="false">
                                <i class="ti ti-atom"></i>
                                <span class="hide-menu">Dashboard</span>
                            </a>
                        </li>
                        <!-- ---------------------------------- -->
                        <!-- Dashboard -->
                        <!-- ---------------------------------- -->


                    </ul>

                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <!--  Header End -->
            
            <div class="body-wrapper-inner">
                <div class="container-fluid" style="padding-top:100px;">
                    <div class="card">
                        <div class="card-body">
                            General Ledger
                            @if (ViewBag.GeneralLedger != null)
                            {
                                <div class="col-md-12">
                              <div class="table-container">
                                  <table style="width:100%" class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Num</th>
                                                <th>Type</th>
                                                <th>Name</th>
                                                <th>Date</th>
                                                <th>Debit</th>
                                                <th>Credit</th>
                                                <th>Customer</th>
                                                <th>Vendor</th>
                                                <th>Employee</th>
                                                <th>Class</th>
                                                <th>Account</th>
                                                <th>Memo</th>
                                                <th>Split</th>
                                                <th>Amount</th>
                                                <th>Balance</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in generalLedger)
                                            {
                                                <tr>
                                                    <td>@item.doc_num</td>
                                                    <td>@item.txn_type</td>
                                                    <td>@item.name</td>
                                                    <td>@item.tx_date</td>
                                                    <td>@item.debt_amt</td>
                                                    <td>@item.credit_amt</td>
                                                    <td>@item.cust_name</td>
                                                    <td>@item.vend_name</td>
                                                    <td>@item.emp_name</td>
                                                    <td>@item.klass_name</td>
                                                    <td>@item.account_name</td>
                                                    <td>@item.memo</td>
                                                    <td>@item.split_acc</td>
                                                    <td>@item.subt_nat_amount</td>
                                                    <td>@item.rbal_nat_amount</td>
                                                    
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class=" align-items-strech" style="display:inline-block !important;width:33%; margin-right:1%;">
                    <div class="card ">
                        <div class="card-body">
                            Customers
                            @if (ViewBag.Customers != null)
                            {
                                <div class="">
                              <div class="table-container">
                                  <table style="width:100%" class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 20%;">Id</th>
                                                <th>Name</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Customers)
                                            {
                                                <tr>
                                                    <td style="width: 20%;">@item.QBId</td>
                                                    <td>@item.CustomerName</td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                            }
                        </div>
                    </div>
                    </div>
                     <div class=" align-items-strech" style="display:inline-block !important;width:33%; margin-right:1%;">
                     <div class="card">
                        <div class="card-body">
                            Vendors
                            @if (ViewBag.Vendors != null)
                            {
                                <div class="">
                              <div class="table-container">
                                  <table style="width:100%" class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 20%;">Id</th>
                                                <th>Name</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Vendors)
                                            {
                                                <tr>
                                                    <td style="width: 20%;">@item.QBId</td>
                                                    <td>@item.VendorName</td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                            }
                        </div>
                        </div>
                    </div>
                     <div class=" align-items-strech" style="display:inline-block !important;width:33%; margin-right:1%;">
                     <div class="card">
                        <div class="card-body">
                            Accounts
                            @if (ViewBag.Accounts != null)
                            {
                                <div class="">
                              <div class="table-container">
                                  <table style="width:100%" class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 20%;">Id</th>
                                                <th>Name</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Accounts)
                                            {
                                                <tr>
                                                    <td style="width: 20%;">@item.QBId</td>
                                                    <td>@item.AccountName</td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                            }
                        </div>
                        </div>
                    </div>
                    @if (ViewBag.Classes != null)
                            {
                     <div class=" align-items-strech" style="display:inline-block !important;width:33%; margin-right:1%;">
                     <div class="card">
                        <div class="card-body">
                            Classes
                            
                                <div class="">
                              <div class="table-container">
                                  <table style="width:100%" class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 20%;">Id</th>
                                                <th>Name</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Classes)
                                            {
                                                <tr>
                                                    <td style="width: 20%;">@item.QBId</td>
                                                    <td>@item.Name</td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                        </div>
                        </div>
                    </div>
                            }
                    
                </div>
            </div>
        </div>
    </div>
    <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/js/sidebarmenu.js"></script>
    <script src="../assets/js/app.min.js"></script>
    <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>

